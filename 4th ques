### queries
i)
SELECT DISTINCT S.Sid
FROM SUPPLIER S
JOIN SHIPMENT SH ON S.Sid = SH.Sid
JOIN PART P ON SH.PID = P.PID
WHERE P.Color = 'Green';

ii)
SELECT S.Sname, COUNT(DISTINCT SH.PID) AS TotalPartsSupplied
FROM SUPPLIER S
JOIN SHIPMENT SH ON S.Sid = SH.Sid
GROUP BY S.Sname;

iii)
UPDATE PART P
SET P.Color = 'Yellow'
WHERE P.PID IN (
    SELECT SH.PID
    FROM SHIPMENT SH
    WHERE SH.Sid = 3
);


