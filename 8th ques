---creating table
CREATE TABLE PLAYER (
    Pid INT PRIMARY KEY,
    Lname VARCHAR(100),
    Fname VARCHAR(100),
    Country VARCHAR(50),
    Yborn INT,
    Bplace VARCHAR(100)
);

CREATE TABLE MATCHES (
    MatchId INT PRIMARY KEY,
    Team1 VARCHAR(100),
    Team2 VARCHAR(100),
    Ground VARCHAR(100),
    Date DATE,
    Winner VARCHAR(100)
);

CREATE TABLE BATTING (
    MatchId INT,
    Pid INT,
    Nruns INT,
    Fours INT,
    Sixes INT,
    PRIMARY KEY (MatchId, Pid),
    FOREIGN KEY (MatchId) REFERENCES MATCHES(MatchId),
    FOREIGN KEY (Pid) REFERENCES PLAYER(Pid)
);

CREATE TABLE BOWLING (
    MatchId INT,
    Pid INT,
    Novers DECIMAL(3, 1),
    Maidens INT,
    Nruns INT,
    Nwickets INT,
    PRIMARY KEY (MatchId, Pid),
    FOREIGN KEY (MatchId) REFERENCES MATCHES(MatchId),
    FOREIGN KEY (Pid) REFERENCES PLAYER(Pid)
);


